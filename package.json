{
  "name": "react-monaco-editor",
  "private": true,
  "version": "0.0.1",
  "main": "./dist/react-monaco-editor.umd.js",
  "homepage": "https://github.com/kothing/react-monaco-editor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kothing/react-monaco-editor.git"
  },
  "scripts": {
    "dev": "vite --host --open",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --config vite.lib.config.ts",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles",
    "prepare": "husky install",
    "uninstall-husky": "npm uninstall husky --no-save && git config --unset core.hooksPath && npx rimraf .husky"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-react": "^4.0.0",
    "dts-bundle-generator": "^7.1.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "less": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
